                <p>Multi-dispositivo real - 1:1 e grupos</p>
            </div>
            <form id="loginForm" class="login-form">
                <input type="text" id="username" placeholder="Seu nome" required>
                <button type="submit" class="btn-primary">Entrar no SOFI</button>
            </form>
        </div>
    </div>

    <!-- TELA PRINCIPAL -->
    <div id="mainScreen" class="chat-screen">
        <div class="sidebar">
            <div class="sidebar-header">
                <h2>SOFI Chat</h2>
                <button onclick="createNewChat()" style="background: rgba(255,255,255,0.2); border: none; color: white; padding: 0.5rem 1rem; border-radius: 8px; cursor: pointer;">+ Nova Conversa</button>
            </div>
            <div class="conversations-list" id="conversationsList">
                <!-- Conversas aparecer√£o aqui -->
            </div>
        </div>

        <div class="chat-area">
            <div class="chat-header">
                <h3 id="currentChatName">Selecione uma conversa</h3>
            </div>
            <div class="messages-container" id="messagesContainer">
                <div style="text-align: center; padding: 3rem; color: #666;">
                    <i style="font-size: 3rem; color: #667eea;">üíú</i>
                    <h3>Bem-vindo ao SOFI!</h3>
                    <p>Clique em "Nova Conversa" para come√ßar</p>
                </div>
            </div>
            <div class="message-input-container">
                <div class="message-input-wrapper">
                    <input type="text" id="messageInput" placeholder="Digite uma mensagem..." disabled>
                    <button id="sendButton" class="btn-send" disabled>‚û§</button>
                </div>
