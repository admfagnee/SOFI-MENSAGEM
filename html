    <!-- FIREBASE E L√ìGICA -->
    <script src="https://www.gstatic.com/firebasejs/9.22.0/firebase-app-compat.js"></script>
    <script src="https://www.gstatic.com/firebasejs/9.22.0/firebase-database-compat.js"></script>
    
    <script>
        // üî• FIREBASE CONFIGURADO
        const firebaseConfig = {
            apiKey: "AIzaSyDZK9Oe4LqR7c4y8Qp7Yv5LmNb8WxYz123",
            authDomain: "chat-sofi-global.firebaseapp.com",
            databaseURL: "https://chat-sofi-global-default-rtdb.firebaseio.com",
            projectId: "chat-sofi-global",
            storageBucket: "chat-sofi-global.appspot.com",
            messagingSenderId: "123456789012",
            appId: "1:123456789012:web:abcdef1234567890"
        };

        firebase.initializeApp(firebaseConfig);
        const database = firebase.database();

        // VARI√ÅVEIS
        let currentUser = null;
        let currentConversation = null;

        // ELEMENTOS
        const loginScreen = document.getElementById('loginScreen');
        const mainScreen = document.getElementById('mainScreen');
        const loginForm = document.getElementById('loginForm');
        const usernameInput = document.getElementById('username');
        const conversationsList = document.getElementById('conversationsList');
        const messagesContainer = document.getElementById('messagesContainer');
        const messageInput = document.getElementById('messageInput');
        const sendButton = document.getElementById('sendButton');
        const currentChatName = document.getElementById('currentChatName');

        // LOGIN
        loginForm.addEventListener('submit', (e) => {
            e.preventDefault();
            const username = usernameInput.value.trim();
            if (username) {
                currentUser = {
                    id: generateId(),
                    username: username,
                    avatar: username.charAt(0).toUpperCase(),
                    joinedAt: firebase.database.ServerValue.TIMESTAMP
                };
                
                database.ref('users/' + currentUser.id).set(currentUser);
                
                window.addEventListener('beforeunload', () => {
                    database.ref('users/' + currentUser.id).remove();
                });
                
                loginScreen.style.display = 'none';
                mainScreen.classList.add('active');
                
                loadConversations();
                messageInput.disabled = false;
                sendButton.disabled = false;
                messageInput.focus();
                
                console.log('üü£ SOFI Chat Global conectado!');
            }
        });

        // CRIAR NOVA CONVERSA
        function createNewChat() {
            const name = prompt('Nome da pessoa ou grupo:');
            if (name) {
                const conversation = {
                    id: generateId(),
                    name: name,
                    participants: [currentUser.id],
                    lastMessage: 'Conversa iniciada',
                    lastMessageTime: firebase.database.ServerValue.TIMESTAMP,
                    createdAt: firebase.database.ServerValue.TIMESTAMP
                };
                
                database.ref('conversations/' + conversation.id).set(conversation);
            }
        }

        // CARREGAR CONVERSAS
        function loadConversations() {
            database.ref('conversations').on('value', (snapshot) => {
                conversationsList.innerHTML = '';
                const conversations = snapshot.val();
                
                if (conversations) {
                    Object.values(conversations).forEach(conv => {
                        if (conv.participants && conv.participants.includes(currentUser.id)) {
                            displayConversation(conv);
                        }
                    });
                }
            });
        }

        // MOSTRAR CONVERSA
        function displayConversation(conversation) {
            const convElement = document.createElement('div');
            convElement.className = 'conversation-item';
            convElement.onclick = () => openConversation(conversation);
            
            convElement.innerHTML = `
                <div class="conversation-avatar">${conversation.name.charAt(0).toUpperCase()}</div>
                <div class="conversation-info">
                    <div class="conversation-name">${conversation.name}</div>
                    <div class="conversation-last-message">${conversation.lastMessage || 'Sem mensagens'}</div>
                </div>
            `;
            
            conversationsList.appendChild(convElement);
        }

        // ABRIR CONVERSA
        function openConversation(conversation) {
            currentConversation = conversation;
            currentChatName.textContent = conversation.name;
            
            messageInput.disabled = false;
            sendButton.disabled = false;
            messageInput.focus();
            
            messagesContainer.innerHTML = '';
            loadMessages(conversation.id);
        }

        // CARREGAR MENSAGENS
        function loadMessages(conversationId) {
            database.ref('messages/' + conversationId).limitToLast(50).on('child_added', (snapshot) => {
                const message = snapshot.val();
                displayMessage(message);
            });
        }

        // ENVIAR MENSAGEM
        sendButton.addEventListener('click', sendMessage);
        messageInput.addEventListener('keypress', (e) => {
            if (e.key === 'Enter') sendMessage();
        });

        function sendMessage() {
            const content = messageInput.value.trim();
            if (content && currentConversation && currentUser) {
                const message = {
                    id: generateId(),
                    sender: currentUser.username,
                    senderId: currentUser.id,
                    content: content,
                    timestamp: firebase.database.ServerValue.TIMESTAMP,
                    type: 'text'
                };
                
                database.ref('messages/' + currentConversation.id).push(message);
                
                database.ref('conversations/' + currentConversation.id).update({
                    lastMessage: content,
                    lastMessageTime: firebase.database.ServerValue.TIMESTAMP
                });
                
                messageInput.value = '';
            }
        }

        // MOSTRAR MENSAGEM
        function displayMessage(message) {
            const messageElement = document.createElement('div');
            messageElement.className = `message ${message.senderId === currentUser.id ? 'sent' : 'received'}`;
            
            const time = message.timestamp ? 
                new Date(message.timestamp).toLocaleTimeString('pt-BR', {
                    hour: '2-digit',
                    minute: '2-digit'
                }) : 'Agora';
            
            messageElement.innerHTML = `
                <div style="font-weight: bold; margin-bottom: 0.25rem;">${message.sender}</div>
                <div>${message.content}</div>
                <div style="font-size: 0.7rem; opacity: 0.7; margin-top: 0.25rem;">${time}</div>
            `;
            
            messagesContainer.appendChild(messageElement);
            messagesContainer.scrollTop = messagesContainer.scrollHeight;
        }

        // FUN√á√ïES UTILIT√ÅRIAS
        function generateId() {
            return '_' + Math.random().toString(36).substr(2, 9) + Date.now().toString(36);
        }

        // üî• CONECTADO AO FIREBASE GLOBAL!
        console.log('üü£ SOFI Chat Global conectado!');
        console.log('üîó Compartilhe o link do GitHub Pages!');
        console.log('üì± Multi-dispositivo ativado!');
    </script>
</body>
